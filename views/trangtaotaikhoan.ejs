<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm thông báo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <div class="pos-f-t">
        <nav class="navbar navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
        </nav>
        <div class="collapse" id="navbarToggleExternalContent">
            <div class="bg-white p-4">
                <%- include('./layout/linktrang.ejs') %>
            </div>
        </div>
    </div><br><br>
    <div class="container">
        <h3>Tạo tài khoản</h3>
        <form action="/taotaikhoan" method="POST">
            <div class="form-group">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="taikhoan">Tên đăng nhập</label>
                            <div class="controls">
                                <input type="text" class="form-control" id="taikhoan" name="taikhoan">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <div class="controls">
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="matkhau">Mật khẩu</label>
                            <div class="controls">
                                <input type="password" class="form-control" id="matkhau" name="matkhau">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="nhaplaimatkhau">Nhập lại mật khẩu</label>
                            <div class="controls">
                                <input type="password" class="form-control" id="nhaplaimatkhau" name="nhaplaimatkhau">
                            </div>
                        </div>
                        <label for="nhaplaimatkhau">Phòng, khoa</label>
                        <div class="form-row">

                            <div class="col">
                                <select class="form-control" name="phongvakhoa" id="phongvakhoa">
                                    <optgroup label="Phòng">
                                        <% phongvakhoa.forEach(function(thongtin){%> 
                                            <% if(thongtin.chucvu == "phong"){ %> 
                                                <option value="<%= thongtin.ten %>"> <%= thongtin.ten %> </option>
                                            <% } %> 
                                        <% }) %> 
                                    </optgroup>
                                    <optgroup label="Khoa">
                                        <% phongvakhoa.forEach(function(thongtin){%> 
                                            <% if(thongtin.chucvu == "khoa"){ %> 
                                                <option value="<%= thongtin.ten %>">Khoa <%= thongtin.ten %> </option>
                                            <% } %> 
                                        <% }) %> 
                                    </optgroup>
                                </select>
                            </div>
                        </div>
                        <br>
                        <% if(locals.successTTK){ %>
                            <div class="alert alert-success">
                                <p>
                                    <%= successTTK %>
                                </p>
                            </div>
                            <% } %>
                                <% if(locals.errorTTK){ %>
                                    <div class="alert alert-danger">
                                        <p>
                                            <%= errorTTK %>
                                        </p>
                                    </div>
                                    <% } %>
                                        <br>
                                        <button type="submit" class="btn btn-success">Tạo tài khoản</button>

                    </div>
                </div>
            </div>
        </form>
    </div>

</body>

</html>